<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/playerName"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/playersMinutes"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:text="@string/zero"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/playersFieldGoals"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:text="@string/zero_for_zero"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero_for_zero"
        android:id="@+id/playersThreePointFieldGoals"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero_for_zero"
        android:id="@+id/playersFreeThrows"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersOffensiveRebounds"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersDefensiveRebounds"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersRebounds"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersAssists"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersSteals"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersBlocks"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersTurnovers"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersFouls"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/playersPoints"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="1" />


</LinearLayout>
