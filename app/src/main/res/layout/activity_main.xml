<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hardwood"
    tools:context="christophershae.stats.MainActivity">


    <TextView
        android:id="@+id/myTeamsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="8dp"
        android:text="@string/my_games"
        android:textAlignment="center"
        android:textColor="?attr/editTextColor"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createNewRoster" />

    <ListView
        android:id="@+id/myCurrentTeams"
        android:layout_width="451dp"
        android:layout_height="517dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTeamsLabel"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/createNewRoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="48dp"
        android:onClick="createNewRosterActivity"
        android:text="@string/newgame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/signOut"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myCurrentTeams"
        app:layout_constraintVertical_bias="0.275"
        app:srcCompat="@android:drawable/ic_input_delete" />
</android.support.constraint.ConstraintLayout>
